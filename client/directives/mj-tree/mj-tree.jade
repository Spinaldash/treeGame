.mj-tree.col-xs-3.col-sm-2.text-center
  div {{state.name}}
  div height: {{height}}
  div health: {{health}}
  .progress
    .progress-bar.progress-bar-primary(role='progressbar', aria-valuenow='100', aria-valuemin='0', aria-valuemax='100', style='width: 100%', ng-if='!health', ng-click='destroy()') Uproot
    .progress-bar.progress-bar-striped(role='progressbar', aria-valuenow='{{health}}', aria-valuemin='0', aria-valuemax='100', ng-style= 'healthBar', ng-if='health') {{health}}%
  img(ng-src='{{state.url}}', ng-click='grow()')
